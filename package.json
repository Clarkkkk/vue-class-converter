{
  "name": "vue-class-converter",
  "displayName": "Vue class converter",
  "description": "Switch CSS class between string and array quickly",
  "author": "Aaron Zhou",
  "publisher": "AaaaronZhou",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "vue",
    "class",
    "tailwindcss"
  ],
  "badges": [],
  "galleryBanner": {
    "theme": "light"
  },
  "icon": "assets/logo.png",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "activationEvents": [
      "onLanguage:vue"
    ],
    "commands": [
      {
        "command": "vue-class-converter.switchClassStyle",
        "title": "Switch vue class style"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus && resourceLangId == 'vue'",
          "command": "vue-class-converter.switchClassStyle",
          "group": "1_modification@1"
        }
      ]
    },
    "keybindings": [
      {
        "when": "editorFocus && resourceLangId == 'vue'",
        "command": "vue-class-converter.switchClassStyle",
        "key": "Ctrl+k v",
        "mac": "Cmd+k v"
      }
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "vscode:prepublish": "pnpm run package",
    "typecheck": "tsc --noEmit --watch --preserveWatchOutput",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "lint": "eslint --cache --fix src/**/*.{js,ts}",
    "lint-staged": "lint-staged",
    "test": "vitest",
    "test:update": "vitest --update",
    "test:run": "vitest --run --changed",
    "release": "commit-and-tag-version"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "commit-and-tag-version": "^11.2.2",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "glob": "^8.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "vitest": "^0.32.2",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  }
}
